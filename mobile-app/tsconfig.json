{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app/_layout.jsx",
    "app/(app)/index.tsx",
    "app/Welcome.jsx",
    "app/HomeScreen.jsx",
    "app/(app)/index.tsx"
  ]
}
